extends layout

block content
  center
    h1 Twitter Sentiment Analysis
 
  div(class="container")
    div(class="row")
      div(class="col-md-4")
        div(class="panel panel-primary")
          div(class="panel-heading")
            h3(class="panel-title") Tweets Analysis
          div(class="panel-body", style="min-height: 100px; max-height: 100px;") 
            ul.analysis
              li.love 
              li.hate
              li.total
    div(class="row")
      div(id="chart", style="height: 200px; width: 100%;")
    div(class="row") 
      div(class="col-md-6")
        div(class="panel panel-primary")
          div(class="panel-heading")
            h3(class="panel-title") Lovers
          div(class="panel-body", style="min-height: 500px; max-height: 500px; overflow-y: scroll;") 
            ul.lovetweets
      div(class="col-md-6")
        div(class="panel panel-primary")
          div(class="panel-heading")
            h3(class="panel-title") Haters
          div(class="panel-body", style="min-height: 500px; max-height: 500px; overflow-y: scroll;") 
            ul.hatetweets

             

block scripts
  script(src='/socket.io/socket.io.js')
  script(src='/javascripts/client.socket.io.js')  
